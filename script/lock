require "app-lock"
require "app-show"


def show
  show = AppShow.new
  show.parse [ ARGV.dup.first ]
  show.start
end


begin
  app = AppLock.new
  app.parse ARGV.dup
  app.start
  show
rescue LL::LockError, LL::ParseError
  $stderr.puts $!.message
  show
  exit -1
rescue
  $stderr.puts $!.message
  $!.backtrace.each do | each |
    $stderr.puts each
  end
  exit -1
end


